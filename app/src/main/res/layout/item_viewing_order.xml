<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_marginEnd="8dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/viewing_order_item_relation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Sequel"
        android:textSize="12sp"
        android:textColor="@color/gray" /> <TextView
    android:id="@+id/viewing_order_item_title"
    android:layout_width="150dp"  android:layout_height="wrap_content"
    tools:text="Long Anime Title That Might Wrap"
    android:textSize="14sp"
    android:textColor="@color/white" android:textStyle="bold"
    android:maxLines="2"
    android:ellipsize="end"
    android:layout_marginTop="4dp"/>

</LinearLayout>