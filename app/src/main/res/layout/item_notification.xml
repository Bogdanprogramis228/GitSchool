<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:background="@color/transparent">

    <ImageView
    android:id="@+id/notificationIcon"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_marginEnd="12dp"
    android:scaleType="centerCrop"
    tools:srcCompat="@drawable/onepuch_fon" />

    <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/notificationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Системне сповіщення"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/notificationMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        tools:text="Технічні роботи: 14.09.2024 01:00"
        android:textColor="@color/gray"
        android:textSize="13sp"/>

</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="end">

        <TextView
            android:id="@+id/notificationTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="14:25   13.09.2024"
            android:textColor="@color/gray"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/notificationReadIndicator"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/circle_gray_bg"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>