<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Верхній контейнер з фоном, аватаркою та ім'ям користувача -->
    <FrameLayout
        android:id="@+id/topContainer"
        android:layout_width="0dp"
        android:layout_height="295dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Фонове зображення -->
        <ImageView
            android:id="@+id/backgroundImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_splash" />

        <!-- Верхня панель з кнопками -->
        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Стрілка назад -->
            <ImageView
                android:id="@+id/backButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/strilka" />

            <!-- Проміжний простір -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Іконка редагування (зміна аватарки/фону) -->
            <ImageView
                android:id="@+id/editProfileButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_editprofile" />
        </LinearLayout>

        <!-- Аватарка користувача (центрально) -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/avatarImage"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/RoundImageShape"
            android:background="@drawable/logo"
            android:padding="2dp" />

        <!-- Ім'я користувача -->
        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="240dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

    </FrameLayout>

    <!-- Нижній блок зі списком елементів -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/listContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_background"
            android:orientation="vertical">

            <!-- Елемент списку з розкривною інформацією -->
            <LinearLayout
                android:id="@+id/accountInfoItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical">

                    <!-- Іконка елемента -->
                    <ImageView
                        android:id="@+id/accountInfoIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_infoprofile" />

                    <!-- Текст елемента -->
                    <TextView
                        android:id="@+id/accountInfoText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/white"
                        android:text="Інформація про акаунт"
                        android:textSize="16sp" />

                    <!-- Стрілка вниз/вгору для розкриття/згортання інформації -->
                    <ImageView
                        android:id="@+id/accountInfoArrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_down" />
                </LinearLayout>

                <!-- Розкривна частина (спочатку прихована) -->
                <!-- Розкривна частина (спочатку прихована) -->
                <LinearLayout
                    android:id="@+id/accountInfoDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:paddingTop="8dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <!-- Розділювальна лінія (всередині випадаючого списку) -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white"
                        android:layout_marginBottom="8dp" />

                    <!-- Блок «Пошта» -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="4dp">

                        <!-- Статичний напис «Пошта:» -->
                        <TextView
                            android:id="@+id/labelEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Пошта:"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <!-- Динамічне поле для email -->
                        <TextView
                            android:id="@+id/userEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Блок «Пароль» -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:id="@+id/labelPassword"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Пароль:"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/userPassword"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Блок «Дата реєстрації» -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:id="@+id/labelRegistrationDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Дата реєстрації:"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/userRegistrationDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Блок «Останній вхід» -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:id="@+id/labelLastLogin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Останній вхід:"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/userLastLogin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <!-- Розділювальна лінія -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />

            <!-- Елемент списку \"Статистика\" -->
            <LinearLayout
                android:id="@+id/accountStatistics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical">

                    <!-- Іконка елемента -->
                    <ImageView
                        android:id="@+id/accountStatisticsIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_account_statistics" />

                    <!-- Текст елемента -->
                    <TextView
                        android:id="@+id/accountStatisticsText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/white"
                        android:text="Статистика"
                        android:textSize="16sp" />

                    <!-- Стрілка вниз/вгору для розкриття/згортання інформації -->
                    <ImageView
                        android:id="@+id/accountStatisticsArrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_down" />
                </LinearLayout>
            </LinearLayout>

            <!-- Розділювальна лінія -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />

            <!-- Елемент списку, що веде до іншої активності -->
            <LinearLayout
                android:id="@+id/accountMasseges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical">

                    <!-- Іконка елемента -->
                    <ImageView
                        android:id="@+id/massegesIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_masseges" />

                    <!-- Текст елемента -->
                    <TextView
                        android:id="@+id/accountmassegesText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/white"
                        android:text="Повідомлення"
                        android:textSize="16sp" />

                    <!-- Стрілка вправо для переходу -->
                    <ImageView
                        android:id="@+id/massegesArrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_right" />
                </LinearLayout>
            </LinearLayout>

            <!-- Розділювальна лінія -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />

            <!-- Елемент списку \"Налаштування\" -->
            <LinearLayout
                android:id="@+id/accountSetings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical">

                    <!-- Іконка елемента -->
                    <ImageView
                        android:id="@+id/Setings"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_settings" />

                    <!-- Текст елемента -->
                    <TextView
                        android:id="@+id/infoaccountSetings"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/white"
                        android:text="@string/menu_settingsSL"
                        android:textSize="16sp" />

                    <!-- Стрілка вправо для переходу -->
                    <ImageView
                        android:id="@+id/setingsArrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_right" />
                </LinearLayout>
            </LinearLayout>

            <!-- Розділювальна лінія -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />

            <!-- Елемент списку для виходу з акаунту -->
            <LinearLayout
                android:id="@+id/logoutItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical">

                    <!-- Іконка виходу -->
                    <ImageView
                        android:id="@+id/logoutIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_logout" />

                    <!-- Текст \"Вийти з акаунту\" -->
                    <TextView
                        android:id="@+id/logoutText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/white"
                        android:text="Вийти з акаунту"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
