<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fon"
    android:fillViewport="true"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/topContainer"
            android:layout_width="match_parent"
            android:layout_height="295dp"
            android:background="@color/fon"
            >

            <ImageView
                android:id="@+id/editProfile_backgroundImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/back_01" />

            <ImageView
                android:id="@+id/editProfile_backArrow"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="36dp"
                android:layout_marginStart="20dp"
                android:padding="4dp"
                android:src="@drawable/strilka"
                />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/editProfile_avatarImage"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/ava_01"
                app:shapeAppearanceOverlay="@style/RoundImageShape"
                />

            <TextView
                android:id="@+id/editProfile_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="30dp"
                android:text="Андрійко"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold"/>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/avatarBlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:background="@color/fon"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="4dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_avatar_profile" />

                <TextView
                    android:id="@+id/avatarBlock_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Аватар"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"/>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/avatarContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexWrap="wrap">

                <FrameLayout
                    android:id="@+id/avatar_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/avatar_upload_background"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        app:shapeAppearanceOverlay="@style/RoundImageShape"
                        android:scaleType="centerCrop"
                        android:src="@drawable/circle_gray_bg"/>

                    <ImageView
                        android:id="@+id/avatar_upload_icon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_download"
                        android:scaleType="centerInside"/>
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/avatar_option1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:gravity="center"
                    android:background="@drawable/anime_header_background">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        app:shapeAppearanceOverlay="@style/RoundImageShape"
                        android:src="@drawable/ava_01"
                        android:scaleType="centerCrop"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/avatar_option2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:gravity="center"
                    android:background="@drawable/anime_header_background">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        app:shapeAppearanceOverlay="@style/RoundImageShape"
                        android:src="@drawable/ava_02"
                        android:scaleType="centerCrop"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/avatar_option3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:gravity="center"
                    android:background="@drawable/anime_header_background">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        app:shapeAppearanceOverlay="@style/RoundImageShape"
                        android:src="@drawable/ava_03"
                        android:scaleType="centerCrop"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/avatar_option4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:gravity="center"
                    android:background="@drawable/anime_header_background">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        app:shapeAppearanceOverlay="@style/RoundImageShape"
                        android:src="@drawable/ava_04"
                        android:scaleType="centerCrop"/>
                </LinearLayout>
            </com.google.android.flexbox.FlexboxLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/backgroundBlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:background="@color/fon"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="4dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_wallpaper_profile" />

                <TextView
                    android:id="@+id/backgroundBlock_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Фон"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"/>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/backgroundContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexWrap="wrap">

                <FrameLayout
                    android:id="@+id/background_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <ImageView
                        android:id="@+id/background_upload_background"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/rounded_rectangle_gray"/>

                    <ImageView
                        android:id="@+id/background_upload_icon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_download"
                        android:scaleType="centerInside"/>
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/background_option1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:gravity="center"
                    android:background="@drawable/anime_header_background">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/back_01"
                        android:background="@drawable/rounded_rectangle_gray"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/background_option2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:gravity="center"
                    android:background="@drawable/anime_header_background">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/back_02"
                        android:background="@drawable/rounded_rectangle_gray"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/background_option3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:gravity="center"
                    android:background="@drawable/anime_header_background">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/back_03"
                        android:background="@drawable/rounded_rectangle_gray"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/background_option4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:gravity="center"
                    android:background="@drawable/anime_header_background">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/back_04"
                        android:background="@drawable/rounded_rectangle_gray"/>
                </LinearLayout>
            </com.google.android.flexbox.FlexboxLayout>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/saveProgressIndicator"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:indeterminate="true" />

        <ProgressBar
            android:id="@+id/uploadProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            android:indeterminate="false"
            android:max="100" />

        <Button
            android:id="@+id/buttonSaveChanges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Зберегти зміни"
            android:enabled="false"
            android:alpha="0.5"
            android:background="@drawable/buttom_background"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:padding="8dp"/>


    <LinearLayout
        android:id="@+id/block"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">
    </LinearLayout>

    </LinearLayout>
</ScrollView>