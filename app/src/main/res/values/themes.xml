<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Базова тема додатку. -->
    <style name="Base.Theme.GitSchool" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Налаштування базової теми, наприклад, кольори тощо -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/blue_00</item>

    </style>

    <!-- Основна тема додатку -->
    <style name="Theme.GitSchool" parent="Base.Theme.GitSchool" />

    <!-- Тема без Action Bar для активностей, де потрібен власний Toolbar -->
    <style name="Theme.GitSchool.NoActionBar" parent="Base.Theme.GitSchool">
        <!-- Додаткових налаштувань можна не додавати, оскільки базова тема вже не містить Action Bar -->
    </style>

    <style name="RoundImageShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">2dp</item>
    </style>

<!--    <style name="CircleShape">-->
<!--        <item name="cornerSize">50%</item>-->
<!--    </style>-->

    <style name="CustomDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@drawable/block_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomDialogStyle02" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:background">@color/fon</item> <!-- Фон сірий -->
        <item name="android:textColorPrimary">@color/white</item> <!-- Білий текст -->
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:backgroundTint">@color/blue</item> <!-- Червоний фон -->
        <item name="android:textColor">@color/white</item> <!-- Білий текст -->
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:backgroundTint">@color/bl</item> <!-- Синій фон -->
        <item name="android:textColor">@color/white</item> <!-- Білий текст -->
    </style>

    <style name="CustomSpinnerStyle">
        <item name="android:background">@drawable/spinner_popup_background</item> <!-- фонове зображення -->
        <item name="android:textColor">@color/white</item> <!-- колір тексту -->
        <item name="android:textSize">16sp</item> <!-- розмір тексту -->
    </style>

    <style name="CustomSearchViewStyle">
        <item name="android:queryBackground">@drawable/block_background</item> <!-- фонове зображення -->
        <item name="android:textColorHint">@color/text</item> <!-- колір підказки -->
        <item name="android:textColor">@color/white</item> <!-- колір тексту -->
        <item name="android:textSize">16sp</item> <!-- розмір тексту -->
    </style>


    <style name="CalendarWeekDayStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item> <!-- Колір днів тижня -->
    </style>

    <style name="CalendarDateStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item> <!-- Колір чисел у календарі -->
    </style>


</resources>

